{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "authentication service for Tazama",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "start": "node -r dotenv/config build/index.js",
    "dev-pem": "openssl genpkey -algorithm RSA -out private-key.pem",
    "test": "jest --config=jest.config.ts --passWithNoTests",
    "fix": "npm run fix:prettier && npm run fix:eslint",
    "fix:eslint": "eslint --fix \"**/*.ts\"",
    "fix:prettier": "prettier --write \"**/*.ts\"",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint \"**/*.ts\"",
    "lint:eslint-unused": "eslint --report-unused-disable-directives \"**/*.ts\"",
    "lint:eslint-no-inline": "eslint --no-inline-config \"**/*.ts\"",
    "lint:prettier": "prettier --check \"**/*.ts\""
  },
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@frmscoe/auth-lib": "^0.0.8",
    "@frmscoe/frms-coe-lib": "^4.0.0",
    "ajv": "^8.17.1",
    "fastify": "^4.28.1"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^2.1.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.7.4",
    "@types/pino": "^7.0.5",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "eslint-config-love": "^52.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "husky": "^9.1.2",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
