{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "authentication service for Tazama",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "start": "node -r dotenv/config build/index.js",
    "clean": "npx rimraf lib node_modules coverage package-lock.json",
    "dev": "node -r dotenv/config -r ts-node/register src/index.ts",
    "dev-pem": "openssl genpkey -algorithm RSA -out private-key.pem",
    "test": "jest --config=jest.config.ts --passWithNoTests",
    "fix": "npm run fix:prettier && npm run fix:eslint",
    "fix:eslint": "eslint --fix",
    "fix:prettier": "prettier --write \"**/*.ts\"",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint",
    "lint:eslint-unused": "eslint --report-unused-disable-directives",
    "lint:eslint-no-inline": "eslint --no-inline-config",
    "lint:prettier": "prettier --check \"**/*.ts\""
  },
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@tazama-lf/auth-lib": "2.2.0-rc.1",
    "@tazama-lf/auth-lib-provider-keycloak": "1.1.0",
    "@tazama-lf/frms-coe-lib": "6.0.0-rc.6",
    "@tazama-lf/frms-coe-startup-lib": "3.0.0-rc.1",
    "ajv": "^8.17.1",
    "fastify": "^5.4.0"
  },
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@stylistic/eslint-plugin": "^5.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.15",
    "@types/pino": "^7.0.5",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "eslint-config-love": "^121.0.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
